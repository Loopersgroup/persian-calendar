<resources>

    <style name="WeekDayTitleStyle">
        <item name="android:layout_width">@dimen/dayOfMonthBoxSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthBoxSize</item>
        <item name="android:textSize">@dimen/text_size_week</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:textColor">@color/weekDayNameColor</item>-->
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:paddingBottom">@dimen/dayOfMonthPaddingBottom</item>
    </style>

    <style name="DayOfMonthStyle">
        <item name="android:layout_width">@dimen/dayOfMonthSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthSize</item>
        <item name="android:textSize">@dimen/text_size_date</item>
        <item name="android:gravity">center</item>
<!--        <item name="android:minHeight">@dimen/dayOfMonthMinHeight</item>-->
<!--        <item name="android:minWidth">@dimen/dayOfMonthMinWidth</item>-->
        <item name="android:layout_centerInParent">true</item>
<!--        <item name="android:layout_marginTop">@dimen/dayOfMonthPaddingBottom</item>-->
        <item name="android:layout_margin">@dimen/dateTitlePaddingBottom</item>


        <item name="android:textColor">@color/default_date_color</item>
    </style>

    <style name="ContainerDayOfWeek">
        <item name="android:layout_width">@dimen/dayOfMonthBoxSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthBoxSize</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="StripRange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/range_bg_color</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">@dimen/dateTitlePaddingBottom</item>
        <item name="android:layout_marginBottom">@dimen/dateTitlePaddingBottom</item>
    </style>

    <style name="AppThemeLight_RedButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/buttonBackgroundColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:fontFamily">@font/font_light</item>
    </style>
    <style name="DefaultNumberPickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textSize">17sp</item> // add if you want to change size
        <item name="android:fontFamily">@font/font_regular</item> // add font (this font folder is present in res folder)
        <item name="android:textColorPrimary">@color/buttonBackgroundColor</item>
    </style>

</resources>